<div id="main-content"> <!-- Main Content Section with everything -->	
<div class="content-box"><!-- Start Content Box -->
<div class="content-box-content">
<div class="tab-content default-tab" id="tab2"> <!-- This is the target div. id must match the href of this div's tab -->
						
					
						   <table >
							<thead>
								<tr>
								  <th>创建虚拟硬盘</th>
								</tr>
							</thead>
					
							<tfoot>
								<tr>
									<td colspan="2">
										<div class=" align-left">
											   <a class="button add" >添加</a>
						                      <a class="button reset" >重置</a>
									    </div>   
									</td>
								</tr>
							</tfoot>
						 
							<tbody >
								<tr class="alt-row">
								    <td>	
								     <label >硬盘名称</label></td><td>
						   			<input  class="text-input small-input" type="text"  id="diskName" name="diskName">
							  	    </td>
								</tr>
								
								<tr>
								   <td>
								   <label>硬盘大小（MB）</label></td><td>
						           <input class="text-input small-input" type="text"  id="diskSize" name="diskSize">
								   </td>
								</tr>
								
								<tr class="alt-row">
								    <td>	
								     <label>硬盘总线类型</label></td><td>
									   <select class="text-input small-input" type="text"  id="diskBusType" name="diskBusType">
									   #foreach($!diskBusType in $!diskBusTypes)
									      <option value="$!diskBusType.value">$!diskBusType.desc</option>
									   #end
									   </select>
							  	    </td>
								</tr>
								
								<tr>
								   <td>
								    <label>硬盘描述</label></td><td>
								   <input class="text-input medium-input" type="text"  id="diskDesc" name="diskDesc">
								   </td>
								</tr>
									
							</tbody>
						</table>
						
						
						
					</div> <!-- End #tab2 -->    
				</div> <!-- End .content-box-content -->
			</div> <!-- End .content-box -->		
</div> <!-- End #main-content -->


<div id="main-content"> <!-- Main Content Section with everything -->	
<div class="content-box"><!-- Start Content Box -->
<div class="content-box-content">
<div class="tab-content default-tab" id="tab2"> <!-- This is the target div. id must match the href of this div's tab -->
						
											
						<table id="hostList">
							<thead>
								<tr>
								  <th>物理机名称</th>
								  <th>物理机IP</th>
								  <th>物理机状态</th>
								  <th>操作</th>
								</tr>
							</thead>
					
							<tfoot>
								<tr>
									<td colspan="6">
										<div class="bulk-actions align-left">
											<a class="button" >全部删除</a>
											<a class="button add" href="/admin/add/form" >添加</a>
										</div>
										
										<div class="pagination">
											<a href="#" title="First Page">&laquo; First</a><a href="#" title="Previous Page">&laquo; Previous</a>
											<a href="#" class="number" title="1">1..</a>
											<a href="#" class="number" title="2">2</a>
											<a href="#" class="number current" title="3">3</a>
											<a href="#" class="number" title="4">4</a>s
											<a href="#" title="Next Page">Next &raquo;</a><a href="#" title="Last Page">Last &raquo;</a>
										</div> <!-- End .pagination -->
										<div class="clear"></div>
									</td>
								</tr>
							</tfoot>
						 
							<tbody>
								#foreach($host in $!hostList)
								<tr>
									<td>$!host.hostName</td>
									<td>$!host.hostIp</td>
									<td>$!host.hostStatus</td>
									<td>
										 <a class="button edit"  href="/admin/edit/form?hostId=$!host.hostId">编辑</a>
										 <a class="button remove" hostId="$!host.hostId">删除</a> 
									</td>
								</tr>
								#end
							</tbody>
						</table>
						
						
						
					</div> <!-- End #tab2 -->    
				</div> <!-- End .content-box-content -->
			</div> <!-- End .content-box -->		
</div> <!-- End #main-content -->


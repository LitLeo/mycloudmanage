<div id="main-content"> <!-- Main Content Section with everything -->	
<div class="content-box"><!-- Start Content Box -->
<div class="content-box-content">
<div class="tab-content default-tab" id="tab2"> <!-- This is the target div. id must match the href of this div's tab -->
					
					
									
						<table id="table">
							<thead>
								<tr>
								  <th>课程名称</th>
								  <th>教师帐号</th>
								  <th>操作</th>
								</tr>
							</thead>
					
							<tfoot>
								<tr>
									<td colspan="6">
										<div class=" align-left">
											<a class="button" href="/admin/class/add/form" >添加</a>
									    </div>   
									    <div class="align-right">
									        <a class="button" >总共$!totalPage页</a>
									        <a class="button firstPage">首页</a>
									        <a class="button prePage" >上页</a>
									        <a class="button "  id="page" currentPage="$!currentPage" totalPage="$!totalPage">$!currentPage</a>
									        <a class="button nextPage" >下页</a>
									        <a class="button lastPage" >末页</a>
									    </div>
									</td>
								</tr>
							</tfoot>
						 
							<tbody >
								#foreach($class in $!classList)
								<tr>
									<td>$!class.className</td>
									<td>$!class.teacherAccount</td>
									<td>
										 <a href="/admin/class/edit/form?classId=$!class.classId">
										 <img src="/resources/images/icons/pencil.png" alt="编辑" tittle="编辑">
                                         </a>
										 <a class="remove" classId="$!class.classId">
										<img src="/resources/images/icons/cross.png" alt="删除" tittle="删除">
                                         </a> 
									</td>
								</tr>
								#end
							</tbody>
						</table>
						
						
						
					</div> <!-- End #tab2 -->    
				</div> <!-- End .content-box-content -->
			</div> <!-- End .content-box -->		
</div> <!-- End #main-content -->

